% package settings
% geometry settings
\geometry{a4paper, centering, scale = 0.8}

% hyperref settings
\definecolor{deepblue}{RGB}{20, 66, 137}

\hypersetup%
{%
    bookmarksnumbered = true,%
    colorlinks = true,%
    linkcolor = deepblue,%
    citecolor = black%
}

% listings settings
\lstset%
{%
    basicstyle = \ttfamily,%
    keywordstyle = \color{green}\bfseries,%
    commentstyle = \color{blue}\rmfamily\itshape,%
    stringstyle = \color{red},%
    numbers = right,%
    rulesepcolor=\color{red!20!green!20!blue!20},%
    breaklines=true%
}

% indentfirst settings
\setlength{\parindent}{2em}

% content settings
\setboolean{@multitoc@toc}{true}
\setboolean{@multitoc@lot}{true}
\setboolean{@multitoc@lof}{true}

\ctexset%
{%
    chapter =%
    {%
        name = \S%
    }%
}

% tabularx
\newcolumntype{Y}{>{\centering\arraybackslash}X}
\newcolumntype{Z}{>{\raggedleft\arraybackslash}X}

% tikz
\usetikzlibrary{circuits.logic.US}

\endinput
